    * xy - {lonlat} oggetto lonlat openlayer
    * zoom - {Number} Livello di zoom.
    *
    */
    zoomToLonlat : function(lonlat,zoom) {

        /*global CWN2:false, window:false, OpenLayers:false */
        "use strict";

        if (this.isValidZoomLevel(zoom)) {
            this.setCenter(lonlat, zoom);
        }
    },

	CLASS_NAME: "CWN2.Map"
