GV.Buttons.zoomhome = function(btnOptions, map) {
    "use strict";

    return L.easyButton({
        position: btnOptions.position,
        states: [{
            stateName: 'zoom-home',
            onClick: function(button, map){
                map.fitBounds(map.initialExtent);
            },
            title: 'Zoom alla estensione iniziale',
            icon: 'fa-home'
        }]
    });
};