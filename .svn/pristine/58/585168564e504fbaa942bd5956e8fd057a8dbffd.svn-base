<!-- TEMPLATE PER LEGENDA -->
<script type="text/template" id="gv-legend-layout-tpl">
    <div id='gv-legend-title'></div>
    <div id='gv-legend-body'></div>
</script>

<script type="text/template" id="gv-legend-title-tpl">
    <div>
        <b>LEGENDA</b><button class='gv-close' type='button'>Ã—</button>
    </div>
</script>

<script type="text/template" id="gv-legend-item-map-tpl">
    <li class="gv-list-legend-map-item">
        <%= name %>
    </li>
</script>

<script type="text/template" id="gv-legend-item-map-info-tpl">
    <li class="gv-list-legend-map-item">
        <%= name %>
        <a class="gv-legend-map-info" title="Scheda metadati" href="/geoservices/REST/metadata/scheda_xml/<%= id %>?style=metadati.xsl" target="_blank">
            <span class="glyphicon glyphicon-info-sign"></span>
        </a>
    </li>
</script>

<script type="text/template" id="gv-legend-item-layer-tpl">
    <li class="gv-list-legend-layer-item">
        <img class='gv-legend-layer-icon' src="<%= legend.icon %>" width="24px" height="24px">
        <span class="gv-layer-visibility-span"><input type="checkbox" class="gv-layer-visibility-cb"></span>
        <span class="gv-layer-title-span"><%= title %></span>
    </li>
</script>

<script type="text/template" id="gv-legend-item-layer-checked-tpl">
    <li class="gv-list-legend-layer-item">
        <div>
            <img class='gv-legend-layer-icon' src="<%= legend.icon %>" width="24px" height="24px">
            <span class="gv-layer-visibility-span"><input type="checkbox" class="gv-layer-visibility-cb" checked></span>
            <span class="gv-layer-title-span"><%= title %></span>
        </div>
    </li>
</script>

<script type="text/template" id="gv-legend-item-layer-disabled-tpl">
    <li class="gv-list-legend-layer-disabled-item">
        <img class='gv-legend-layer-icon' src="<%= legend.icon %>" width="24px" height="24px">
        <span class="gv-layer-visibility-span"><input type="checkbox" class="gv-layer-visibility-cb" disabled></span>
        <span class="gv-layer-title-span"><%= title %></span>
    </li>
</script>

<script type="text/template" id="gv-legend-button-tpl">
    <div  class='gv-legend-button'>
    </div>
</script>
<!-- FINE TEMPLATE PER LEGENDA -->
