/* ----------------------------------------------- */
/* GV */
/* ----------------------------------------------- */

#loghi-fesr {
  position: absolute;
  left: 0px;
  bottom: 0px;
  height: 40px;
  width: 220px;
  background: rgba(255,255,255,0.7) url(/geoviewer2/static/img/scuoladigitale/loghi-fesr-mini.png) no-repeat center;
  opacity: 1;
}

@media only screen and (min-width: 540px) {
  /* For desktop only: */
  #gv-title {
    position: absolute;
    left: 10px;
    top: 10px;
    height: 94px;
    width: 232px;
    padding-left: 10px;
    z-index: 799;
    background: #fff url(/geoviewer2/static/img/scuoladigitale/logo-scuola-aperta.png) no-repeat 10% 50%;
    opacity: 1;
    filter: alpha(opacity=100);
  }
}

@media only screen and (max-width: 540px) {
  #gv-title {
    position: absolute;
    left: 10px;
    top: 10px;
    width: 160px;
    height: 94px;
    padding-left: 10px;
    z-index: 799;
    background: #fff url(/geoviewer2/static/img/scuoladigitale/logo-scuola-aperta.png) no-repeat 10% 50%;
    opacity: 1;
    filter: alpha(opacity=100);
  }
  .leaflet-container .leaflet-control-search {
    width: 178px;
  }
  .gv-search {
    width: 170px;
  }
  .el-select {
    width: 170px !important;
  }
}

.leaflet-container .leaflet-control-search {
  top: 94px;
  background-color: white !important;
  box-shadow: 0 0px 0px rgba(0, 0, 0, 0.65) !important;
}

.el-select {
  width: 240px !important;
  margin-left: 5px;
}

.el-select-dropdown__list {
  max-width: 400px;
}

.el-select-dropdown {
  left: 10px !important;
}

.el-select-dropdown__item {
  height: 50px;
}

#gv-legend {
  height: auto;
}

#gv-legend-body {
  height: auto;
  overflow-y: hidden;
}

.gv-legend-layer-icon {
  width: 24px;
  height: 27px;
}
.gv-list-legend-map-item {
  height: 0;
  padding: 0;
}

.gv-layer-visibility-span {
  position: absolute;
  top: 25%;
  left: 32px;
}

input[type='text']:focus {
  outline: none;
}

/* Popup */

.leaflet-popup-content-wrapper {
  color: #31708f;
}
.leaflet-popup-content-wrapper a {
  color: #31708f;
  text-decoration: underline;
}

.leaflet-container a.leaflet-popup-close-button {
  color: #31708f;
}

/* LEAFLET SEARCH */

.leaflet-container .leaflet-control-search {
  position: relative;
  float: left;
  color: #ccc;
  background-color: #31708f;
  z-index: 1000;
  box-shadow: 0 1px 7px rgba(0, 0, 0, 0.65);
  margin-left: 10px;
  margin-top: 10px;
}

.leaflet-control-search.search-exp {
  /*expanded*/
  box-shadow: 0 1px 7px #999;
  background: #31708f;
}
.leaflet-control-search .search-input {
  display: block;
  float: left;
  background: #31708f;
  color: #ccc;
  border: none;
  height: 18px;
  width: 200px;
  padding: 0 18px 0 2px;
  margin: 3px 0 3px 3px;
}
.leaflet-control-search.search-load .search-cancel {
  visibility: hidden;
}
.leaflet-control-search .search-cancel {
  display: block;
  width: 22px;
  height: 18px;
  position: absolute;
  right: 22px;
  margin: -1px 0;
  filter: alpha(opacity=80);
  opacity: 0.8;
  background: #31708f;
  border-radius: 4px;
  color: #ccc;
  text-align: center;
  text-decoration: none;
  font-size: 16px;
  padding-top: 5px;
}

.leaflet-control-search .search-cancel:hover {
  filter: alpha(opacity=100);
  opacity: 1;
}
.leaflet-control-search .search-cancel span {
  display: none; /* comment for cancel button imageless */
  font-size: 18px;
  line-height: 20px;
  color: #ccc;
  font-weight: bold;
}
.leaflet-control-search .search-cancel:hover span {
  color: #aaa;
}
.leaflet-control-search .search-button {
  display: block;
  float: left;
  width: 26px;
  height: 22px;
  background: #31708f;
  border-radius: 4px;
  color: #ccc;
  text-align: center;
  text-decoration: none;
  font-size: 16px;
  padding-top: 5px;
}
.leaflet-control-search .search-tooltip {
  position: absolute;
  top: 57%;
  left: 0;
  float: left;
  list-style: none;
  padding-left: 0;
  min-width: 120px;
  max-height: 122px;
  box-shadow: 1px 1px 6px rgba(0, 0, 0, 0.4);
  background-color: #31708f;
  z-index: 1010;
  overflow-y: auto;
  overflow-x: hidden;
  cursor: pointer;
}
.leaflet-control-search .search-tip {
  margin: 2px;
  padding: 2px 4px;
  display: block;
  color: #ccc;
  background: #31708f;
  border-radius: 0.25em;
  text-decoration: none;
  /*    white-space:nowrap; */
}
.leaflet-control-search .search-button:hover {
  background-color: #31708f;
}
.leaflet-control-search .search-tip-select,
.leaflet-control-search .search-tip:hover {
  background-color: #31708f;
}
.leaflet-control-search .search-alert {
  cursor: pointer;
  clear: both;
  font-size: 0.75em;
  margin-bottom: 5px;
  padding: 0 0.25em;
  color: #ccc;
  font-weight: bold;
  border-radius: 0.25em;
}
